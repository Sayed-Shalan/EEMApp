<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@color/mycolorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp" android:contentDescription="TODO" 
            android:layout_height="match_parent"
            android:layout_weight="0.15" />

        <TextView
            android:id="@+id/txtShopReportTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="text"
            android:textColor="@color/white"
            android:textSize="@dimen/txtHeader" />

        <ImageView
            android:id="@+id/imgShopReportHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:contentDescription="TODO" android:src="@drawable/ic_home" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="@color/mycolorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgShopReportDept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:contentDescription="TODO" android:src="@drawable/ic_report_dept" />

        <ImageView
            android:id="@+id/imgShopReportOffers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:contentDescription="TODO" android:src="@drawable/ic_report_offers" />

        <ImageView
            android:id="@+id/imgShopReportReservation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:contentDescription="TODO" android:src="@drawable/ic_report_sales" />

        <ImageView
            android:id="@+id/imgShopReportProduct"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:contentDescription="TODO" android:src="@drawable/ic_report_product" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fShopReport"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" />


</LinearLayout>