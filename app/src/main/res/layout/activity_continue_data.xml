<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp" android:contentDescription="TODO" 
        android:layout_height="match_parent"
        android:layout_weight="0.15" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent" android:contentDescription="TODO" 
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgShopImage"
                android:layout_width="0dp" android:contentDescription="TODO" 
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/btnShopImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@drawable/edittextbg"
                android:gravity="center"
                android:text="@string/shopimage"
                android:textColor="@color/hintColor" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent" android:contentDescription="TODO" 
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <!-- Shop Mall -->
        <Spinner
            android:id="@+id/spShopMall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <ImageView
            android:layout_width="match_parent" android:contentDescription="TODO" 
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <!-- Shop City -->
        <Spinner
            android:id="@+id/spShopCity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

        <ImageView
            android:layout_width="match_parent" android:contentDescription="TODO" 
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <!-- Shop Name -->
        <EditText
            android:id="@+id/etShopName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@drawable/edittextbg"
            android:gravity="center"
            android:hint="@string/shopname"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/hintColor" />

        <ImageView
            android:layout_width="match_parent" android:contentDescription="TODO" 
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <!-- Shop Address -->
        <EditText
            android:id="@+id/etShopAddress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@drawable/edittextbg"
            android:gravity="center"
            android:hint="@string/shopaddress"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/hintColor" />

        <ImageView
            android:layout_width="match_parent" android:contentDescription="TODO" 
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <!-- Shop Phone -->
        <EditText
            android:id="@+id/etShopPhone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@drawable/edittextbg"
            android:gravity="center"
            android:hint="@string/shopphone"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="@color/hintColor" />

        <ImageView
            android:layout_width="match_parent" android:contentDescription="TODO" 
            android:layout_height="0dp"
            android:layout_weight="0.05" />

        <!-- Button Continue -->
        <Button
            android:id="@+id/btnShopContinue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:background="@drawable/btnbg"
            android:gravity="center"
            android:text="@string/btnContinue"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="match_parent" android:contentDescription="TODO" 
            android:layout_height="0dp"
            android:layout_weight="0.1" />
    </LinearLayout>

    <ImageView
        android:layout_width="0dp" android:contentDescription="TODO" 
        android:layout_height="match_parent"
        android:layout_weight="0.15" />

</LinearLayout>