<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llClientProfileEdit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:contentDescription="TODO" android:src="@drawable/ic_edit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="left|center"
            android:paddingLeft="@dimen/cellText_padding"
            android:text="Edit Your Data"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llClientProfileOrder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:contentDescription="TODO" android:src="@drawable/ic_order"
            android:tint="@color/tabRed" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="left|center"
            android:paddingLeft="@dimen/cellText_padding"
            android:text="Your Order"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llClientProfileChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:contentDescription="TODO" android:src="@drawable/ic_chat"
            android:tint="@color/tabRed" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="left|center"
            android:paddingLeft="@dimen/cellText_padding"
            android:text="Your Chatting"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"></LinearLayout>

</LinearLayout>